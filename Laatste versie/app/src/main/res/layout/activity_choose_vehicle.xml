<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="10dp"
    android:paddingLeft= "35dp"
    tools:context="com.example.anthony.project1.Board"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView25"
        android:tag="bike"
        android:src="@drawable/bike"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView26"
        android:tag="bycicle"
        android:src="@drawable/bycicle"
        android:layout_alignTop="@+id/imageView25"
        android:layout_alignStart="@+id/imageView30" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView27"
        android:tag="truck"
        android:src="@drawable/truck"
        android:layout_marginEnd="55dp"
        android:layout_alignTop="@+id/imageView30"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/imageView28"
        android:tag="person"
        android:src="@drawable/person"
        android:layout_alignTop="@+id/imageView26"
        android:layout_alignStart="@+id/imageView27" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView29"
        android:tag="car3"
        android:src="@drawable/car3"
        android:layout_marginBottom="95dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView25" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView30"
        android:tag="car4"
        android:src="@drawable/car4"
        android:layout_alignTop="@+id/imageView29"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
